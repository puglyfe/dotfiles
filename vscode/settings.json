{
  // Color Highlight Extension
  // ---------------------------------------------------------------------------

  "color-highlight.markerType": "dot-before",
  "color-highlight.markRuler": false,

  // CSS Class Completion
  // ---------------------------------------------------------------------------

  // "html-css-class-completion.enableEmmetSupport": true,

  // Editor
  // ---------------------------------------------------------------------------

  "editor.colorDecorators": false,
  "editor.cursorBlinking": "phase",
  "editor.fontFamily": "Operator Mono, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 12,
  "editor.fontWeight": "400",
  "editor.minimap.enabled": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderControlCharacters": true,
  "editor.renderIndentGuides": true,
  "editor.renderWhitespace": "boundary",
  "editor.selectionHighlight": false,
  "editor.snippetSuggestions": "top",
  "editor.tabSize": 2,
  "editor.wordWrap": "bounded",
  // "editor.rulers": [80],
  // "[javascript]": {
  //   "editor.rulers": [80]
  // },
  // "[javascriptreact]": {
  //   "editor.rulers": [80]
  // },

  // Emmet
  // ---------------------------------------------------------------------------

  "emmet.triggerExpansionOnTab": true,
  // "emmet.includeLanguages": {
  //   "postcss": "css",
  //   "javascript": "javascriptreact"
  // },
  // "emmet.syntaxProfiles": {
  //   "postcss": "css"
  // },

  // ESLint
  // ---------------------------------------------------------------------------

  "eslint.autoFixOnSave": false,

  // Files
  // ---------------------------------------------------------------------------

  // "files.associations": {
  //   "*.css": "postcss",
  //   ".*": "shellscript"
  // },
  // "files.autoSave": "onFocusChange",
  "files.exclude": {
    "**/.git": false
  },
  "files.trimTrailingWhitespace": true,

  // GitLens
  // ---------------------------------------------------------------------------

  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.statusBar.enabled": false,
  "gitlens.resultsExplorer.location": "scm",
  "gitlens.historyExplorer.enabled": true,
  "gitlens.historyExplorer.location": "scm",
  "gitlens.keymap": "none",
  "gitlens.advanced.messages": {
    "suppressShowKeyBindingsNotice": true
  },

  // HTML
  // ---------------------------------------------------------------------------

  "html.format.indentHandlebars": true,
  "html.format.indentInnerHtml": true,

  // JavaScript
  // ---------------------------------------------------------------------------

  "javascript.implicitProjectConfig.experimentalDecorators": true,

  // Prettier
  // ---------------------------------------------------------------------------

  "prettier.eslintIntegration": true,
  "prettier.stylelintIntegration": true,

  // SCM
  // ---------------------------------------------------------------------------

  "scm.diffDecorations": "gutter",

  // Search
  // ---------------------------------------------------------------------------

  // "search.location": "sidebar",

  // Stylelint Extension
  // ---------------------------------------------------------------------------

  // Override default CSS validation in favor of Stylelint extension
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,

  // Terminal
  // ---------------------------------------------------------------------------

  "terminal.integrated.cursorBlinking": true,

  // Window
  // ---------------------------------------------------------------------------

  "window.zoomLevel": 0,
  "window.newWindowDimensions": "inherit",

  // Workbench
  // ---------------------------------------------------------------------------

  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.iconTheme": "file-icons",
  "workbench.startupEditor": "none",
  "workbench.quickOpen.closeOnFocusLost": false,
  "workbench.statusBar.visible": true,
  "workbench.statusBar.feedback.visible": false,
  "workbench.editor.tabCloseButton": "off",

  // Make info, error and warning decorations in overview ruler transparent
  // "workbench.colorCustomizations": {
  // "editorOverviewRuler.errorForeground": "#0000",
  //   "editorOverviewRuler.infoForeground": "#0000",
  //   "editorOverviewRuler.warningForeground": "#0000",
  // },

  // Zen Mode
  // ---------------------------------------------------------------------------

  "zenMode.centerLayout": false,
  "gitlens.views.fileHistory.enabled": true,
  "gitlens.views.fileHistory.location": "scm",
  "gitlens.views.lineHistory.enabled": true,
  "gitlens.views.lineHistory.location": "scm",
  "gitlens.views.compare.location": "scm",
  "gitlens.views.search.location": "scm",
}
